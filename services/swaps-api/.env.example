# Server Configuration
# Copy to .env or .env.local - never commit those files.
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/swaps_db

# Redis
REDIS_URL=redis://localhost:6379

# Sentry (optional)
SENTRY_DSN=

# Quote behavior: true = only real aggregator routes (no mock)
REAL_QUOTES_ONLY=false

# Debug: 1 = log outbound request/response (no secrets)
DEBUG_QUOTES=0

