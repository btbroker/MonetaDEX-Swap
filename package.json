{
  "name": "monetadex-platform",
  "version": "0.1.0",
  "private": true,
  "description": "MonetaDEX - Cross-chain DEX aggregator platform",
  "scripts": {
    "dev": "sh scripts/free-ports.sh 2>/dev/null; turbo run dev",
    "dev:core": "bash scripts/dev-core.sh",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@fortuna/swaps-api...",
    "smoke:quotes": "bash scripts/smoke-quotes.sh",
    "smoke:brla": "bash scripts/smoke-brla.sh",
    "test:quotes": "bash scripts/test-quotes.sh",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.11.2",
    "prettier": "^3.2.4",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
